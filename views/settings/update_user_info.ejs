<div class="form_login col-md-12" style="margin-top: 30px;">
    <h4>Edit Account</h4>
    <form action="#" onsubmit="return false;">
        <div class="form-group" hidden="true">
            <input type="text" class="form-control" required="true" id="type" value="<%=type%>">
        </div>
        <div class="form-group">
            <label for="upd_user_email" class="col-md-4 control-label">User ID</label>
            <input type="email" class="form-control" name="" id="" readonly="true" value="<%=user.userAccountName%>">
        </div>
        <div class="form-group">
            <label for="upd_user_email" class="col-md-4 control-label">Email</label>
            <input type="email" class="form-control" name="upd_user_email" id="upd_user_email" required="true" value="<%=user.userEmail%>">
        </div>
        <div class="form-group">
            <label for="upd_user_full name" class="col-md-4 control-label"><%= user.userIsCompany? "Company Name" :"Full name"%></label>
            <input type="" class="form-control" id="upd_user_fullname" required="true" value="<%=user.userFullName%>">
        </div>
        <div class="form-group">
            <label for="upd_user_address" class="col-md-4 control-label">Address Line 1</label>
            <input type="" class="form-control" id="upd_user_address" value="<%=user.userAddress%>">
        </div>
        <div class="form-group" style="height: 60px;">
            <div class="col-md-6 col-xs-12 col-sm-6" id="pad-left">
                <label for="upd_user_city" class="col-md-4 control-label">City</label>
                <input type="text" class="form-control" id="upd_user_city" value="<%=user.userCity%>">
            </div>
            <div class="col-md-6 col-xs-12 col-sm-6" id="pad-right">
                <label for="upd_user_postal" class="col-md-4 control-label">Postal/zip</label>
                <input type="number" class="form-control" id="upd_user_postal" value="<%=user.userPostalZip%>">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label">Country</label>
        	<div class="selectdiv">
        		<select id="upd_country" class="form-control" value="<%=user.userCountry%>">
                	<%if (user.userCountry == undefined || user.userCountry.length == 0){%>
                		<option selected="" class="pla" hidden="">Select country</option>
                	<%}else{%>
                		<option class="pla" hidden="">Select country</option>
                	<%}%>
                    <%
                    	countries.forEach(function(country){
                    %>
                    	<%if(country.countryName == user.userCountry){%>
                    		<option selected="" class="pla" value="<%=country.countryName%>"><%=country.countryName%></option>
                    	<%}else{%>
                    		<option class="pla" value="<%=country.countryName%>"><%=country.countryName%></option>
                		<%}%>
                    <%});%>
            	</select>
        	</div>
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-primary" onclick="Profile.validate_update_profile();">UPDATE</button>
        </div>
    </form>

    <div class="ic-close" style="margin: -10px 0px 0px 0px">
        <a href="#" onclick="gotoMyAccount();"><img class="cancel" src="images/cancel.jpg" alt=""></a>
    </div>
</div>
