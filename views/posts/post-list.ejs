<script type="text/javascript">
	
	$('#load').click(function (){
		 $('#load').hide();
		 $('#content').html('<img id="loader-img" alt="" src="https://cdn.dribbble.com/users/825103/screenshots/3130661/web_loader_dribbble.gif" width="200"  align="center" />');
		 var page = $('#current-page').val();
		 // Ajax Request
		 $.ajax({
		 type: "POST",
		 dataType: "json",
		 data:{page:page},
		 url: "/api/post-list",
		  success: function (data) {
		  	if(data.data.length>0){
		  		$('#load').show();
		  		$('#current-page').val(page+1);
		  		for (var i = 0; i < data.data.length; i++) {
		  			var item = '<div class="col-sm-10 col-md-6" style="margin-top: 10px;">';
		  			item+= '<img src="'+data.data[i].image.url+'" style="width: 100%" alt=""></div>';
		  			item+= '<div class="col-sm-10 col-md-6"><a href="/post-detail?id='+data.data[i]._id+'"><h3>'+data.data[i].title+'</h3></a>'+data.data[i].content.brief+'</div><div class="row"></div>';
		  			$('#content-data').append(item).children(':last').hide().fadeIn(1000);
		  		}
		  		$('#content').html("");
		  	}
		    setTimeout(function () {
		       $('#content').html("");
		          }, 3000);
		    }
		    });
		});
</script>
